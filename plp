#!/usr/bin/env bash


H='\033[0;31m' # Heart color
P='\033[0;35m' # PC color

echo -e "${P}
       _______________                        _______________ 
      |  ___________  |${H}     .-.     .-.      ${P}|  ___________  |
      | |           | |${H}    .****. .****.     ${P}| |           | |
      | |   0   0   | |${H}    .*****.*****.     ${P}| |   0   0   | |
      | |     -     | |${H}     .*********.      ${P}| |     -     | |
      | |   \___/   | |${H}      .*******.       ${P}| |   \___/   | |
      | |___     ___| |${H}       .*****.        ${P}| |___________| |
      |_____|\_/|_____|${H}        .***.         ${P}|_______________|
        _|__|/ \|_|_.............${H}*${P}.............._|________|_
       / ********** \                          / ********** \\
     /  ************  \                      /  ************  \\
    --------------------                    --------------------"

# Restablecer color blanco
echo -e "\033[0;37m"
